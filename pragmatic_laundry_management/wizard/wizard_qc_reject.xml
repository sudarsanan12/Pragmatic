<odoo>
    <data>
        
        <record id="reject_reason_wizard_form" model="ir.ui.view">
            <field name="name">wizard form view</field>
            <field name="model">laundry_management.qc.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="sale_id" invisible='1'/>
                            <field name="reason_to_reject" />
                        </group>
                    </group>
                    <footer>
                        <button name='quality_issue' type='object' string='Submit Reason'></button>
                        <button string="Cancel" class="oe_highlight" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_wizard_reject" model="ir.actions.act_window">
            <field name="name">Reason To Reject</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">laundry_management.qc.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="reject_reason_wizard_form" />
            <field name="target">new</field>
        </record>
    </data>
</odoo>