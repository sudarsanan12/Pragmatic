<odoo>
    <data>
        
        <record id="driver_delivery_wizard_form" model="ir.ui.view">
            <field name="name">Delivery Driver wizard form view</field>
            <field name="model">laundry_management.driver.delivery.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="sale_id" />
                            <field name="driver_id" domain="[('is_driver', '=', True)]"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_assgin_driver" string="Save" type="object" class="btn-primary"/>
                        <button string="cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                    
                </form>
            </field>
        </record>
        <record id="action_wizard_driver_delivery" model="ir.actions.act_window">
            <field name="name">Delivery Driver</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">laundry_management.driver.delivery.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="driver_delivery_wizard_form" />
            <field name="target">new</field>
        </record>
    </data>
</odoo>