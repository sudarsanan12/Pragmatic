<odoo>
    <data>
        <record id="sequence_laundry_complaint" model="ir.sequence">
            <field name="name">Compalint Sequence</field>
            <field name="code">laundry_management.complaint</field>
            <field name="prefix">COMP</field> 
            <field name="padding">5</field> 
            <field name="company_id" eval="False" />
        </record>
        <record id="action_complaint" model="ir.actions.act_window">
            <field name="name">Complaint</field>
            <field name="res_model">laundry_management.complaint</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face"> Create a Complaint </p>
            </field>
        </record>
        <record id="compalint_tree_view" model="ir.ui.view">
        <field name="name">Compalint</field>
        <field name="model">laundry_management.complaint</field>
        <field name="arch" type="xml">
            <tree>              
                <field name="customer_name_id"/>
                <field name="contact_number"/>
                <field name="order_id_id"/>
                <!-- <field name="products_id"/> -->

                <field name="complaint_description"/>
            </tree>
        </field>
    </record>
    <record id="compalint_form_view" model="ir.ui.view">
        <field name="name">Compalint</field>
        <field name="model">laundry_management.complaint</field>
        <field name="arch" type="xml">
            <form>
                <xpath expr="//header" position="replace">
                    <header>
                        <button name="cancel_action" type="object" string="Cancel" attrs="{'invisible': ['|','|',('status', '=', 'recieved'),('status', '=', 'resolved'),('status', '=', 'canceled')]}"/>
                        <button name="aprove_action" type="object" string="Approve" attrs="{'invisible': ['|','|',('status', '=', 'recieved'),('status', '=', 'resolved'),('status', '=', 'canceled')]}"/>
                        <button name="resolve_action" type="object" string="Resolve"  attrs="{'invisible': ['|','|',('status', '=', 'recieved'),('status', '=', 'resolved'),('status', '!=', 'canceled')]}"/>
                        <field name="status" widget="statusbar" statusbar_visible="canceled,recieved,resolved"/>
                    </header>
                </xpath>               
                <sheet>
                    <group>
                        <h1><field name="sequence" /></h1>
                    </group>
                    <group>
                        <field name="customer_name_id"/>
                        <field name="contact_number"/>
                        <field name="order_id_id"/>
                        <!-- <field name="products_id"/> -->

                        <field name="complaint_description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    </data>
</odoo>