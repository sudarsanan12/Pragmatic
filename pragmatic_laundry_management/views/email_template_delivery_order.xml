<odoo>
    <data noupdate="1">
        <record id="laundry_email_template_driver" model="mail.template">
            <field name="name">Order created-Driver: Send by email</field>
            <field name="model_id" ref="pragmatic_laundry_management.model_sale_order"/>
            <field name="email_from">{{ object.company_id.email }}</field>
            <field name="email_to">{{ object.driver_id.email }}</field>
            <field name="subject">Transportation order created (Ref {{ object.name }})</field>
            <field name="description">Transportation order Created for Pick/Delivery </field>
            <field name="auto_delete" eval="False" />
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear
                            <t t-esc='object.driver_id.name'></t>
                        <br /><br />
                        You Have an order 
                            <strong><t t-esc='object.name'></t></strong>
                        <br /><br />
                        please check your Dashboard
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>
