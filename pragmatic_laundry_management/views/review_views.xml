<odoo>
    <data>
    <record id="laundry_review_action" model="ir.actions.act_window">
      <field name="name">Reviews</field>
      <field name="res_model">laundry_management.review</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
                    Create a new review
        </p>
      </field>
    </record>
    <record id="review_tree" model="ir.ui.view">
      <field name="name">review</field>
      <field name="model">laundry_management.review</field>
      <field name="arch" type="xml">
        <tree string="reviews">
              <field name="review"/>
            <field name="customer_id"/>
             <field name="sale_id"/>
        

        </tree>
      </field>
    </record>

    <record id="review_form" model="ir.ui.view">
      <field name="name">review</field>
      <field name="model">laundry_management.review</field>
      <field name="arch" type="xml">
        <form string="review">
          <sheet>
            <group>
              <h1><field name="sequence" /></h1>
          </group>
          <group>
              <field name="review"/>
              <field name="customer_id"/>
              <field name="sale_id"/>

               <field name="rating" widget="rating" options="{'stars': '5'}" />
            </group>

           
          </sheet>
        </form>
      </field>
    </record>

      



    </data>
</odoo>