<odoo>
    <data>



        <record id="view_service_tree" model="ir.ui.view">
            <field name="name">laundry_management.service.tree</field>
            <field name="model">laundry_management.service</field>
            <field name="arch" type="xml">
                <tree string="Service">
                    <field name="name"/>
                    <field name="description"/>
                   
                  

                </tree>
            </field>
        </record>

        <record id="view_service_form" model="ir.ui.view">
            <field name="name">laundry_management.service.form</field>
            <field name="model">laundry_management.service</field>
            <field name="arch" type="xml">
                <form string="Service">

                    <sheet>
                        <div style="width:150px; float:right">
                            <field name="image" widget="image" style="border-right:70px; margin-bottom:100px" />
                        </div>
                        <group>
                        <group>
                            <field name="name"/>
                            <field name="description" placeholder="Enter Description (maximum 100 characters)" attrs="{'maxlength': 100}"/>
                        </group>
                        </group>
                        
                    </sheet>

                </form>
            </field>
        </record>



        <record id="view_service_search" model="ir.ui.view">
            <field name="name">laundry_management.service.search</field>
            <field name="model">laundry_management.service</field>
            <field name="arch" type="xml">
                <search string="Service">
                   
                    <field name="name"/>
                    <field name="description"/>
                   
                </search>
            </field>
        </record>


        <record id="action_service" model="ir.actions.act_window">
            <field name="name">Service</field>
            <field name="res_model">laundry_management.service</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Service
                </p>
            </field>
        </record>

    </data>
    </odoo>