        <odoo>
  <data>
    <record id="qc_action" model="ir.actions.act_window">
      <field name="name">Quality controller</field>
      <field name="res_model">laundry_management.qc</field>
      <field name="view_mode">kanban,tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Create
        </p>
      </field>
    </record>
    
    <record id="laundry_kanban_view" model="ir.ui.view">
      <field name="name">laundry_management.qc.kanban</field>
      <field name="model">laundry_management.qc</field>
      <field name="arch" type="xml">
        <kanban class="o_kanban_laundry">
          <field name="id" />
          <field name="sequence" />
          <field name="qc_id" />
          <field name="sale_id" />
          <field name="reason_to_reject" />
          <templates>
            <t t-name="kanban-box">
              <div t-attf-class="oe_kanban_card oe_kanban_global_click" style="width:500px;">
                <div class="oe_kanban_details">
                  <div class="col-6">
                    <strong class="oe_kanban_record_title">
                      <div class="row">
                        <div class="col-12">
                          <span>ID: <t t-esc="record.sequence.value" />
                          </span>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-12 text-muted">
                          <span>QC ID : <t t-esc="record.qc_id.value" />
                          </span>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-12 text-muted">
                          <span>Sale order id : <t t-esc="record.sale_id.value" />
                          </span>
                        </div>
                      </div>
                    </strong>
                  </div>
                  <div class="col-6">
                    <span>Reject Reason : <field name="reason_to_reject" />
                    </span>
                  </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>
    <record id="qc_tree" model="ir.ui.view">
      <field name="name">Quality controller</field>
      <field name="model">laundry_management.qc</field>
      <field name="arch" type="xml">
        <tree string="QC">
          <field name="sequence" />
          <field name="qc_id" />
          <field name="sale_id" />
          <field name="reason_to_reject" />
        </tree>
      </field>
    </record>

    <record id="qc_form" model="ir.ui.view">
      <field name="name">Quality controller</field>
      <field name="model">laundry_management.qc</field>
      <field name="arch" type="xml">
        <form string="QC">
          <header>
            <button name="approve" string="Approve" type="object"
              attrs="{'invisible': [('state','!=', 'pending')]}" class="btn-primary" />
            <button name="reject" string="Reject" type="object"
              attrs="{'invisible': [('state','!=', 'pending')]}" class="btn-primary" />
            <field name="state" widget="statusbar" />
          </header>
          <sheet>

            
            <div class="oe_title">
              <h1>
                <field name="sequence" readonly="1" />
              </h1>
            </div>
            <group>
              <field name="qc_id" />
              <field name="sale_id" />
              <field name="reason_to_reject" />
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids"/>
           <field name="message_ids"/>
        </div>
        </form>
      </field>
    </record>
  </data>
</odoo>