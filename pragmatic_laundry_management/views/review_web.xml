<odoo>
    <data>

        <template id="review_page_template">
            <t t-call="website.layout">
                <div class="container mt-5 mb-5">
                    <form method="POST" action="/laundry/reivew-submit">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div class="row height d-flex justify-content-center align-items-center">
                            <div class="col-md-6">
                                <div class="card px-5 py-4">
                                    <h1 id="sale_id" name="sale_id">
                                        <t t-esc="revs.name"/>
                                    </h1>
                                    <t t-esc="revs.partner_id.name"/>
                                    <div class="mt-2 inputs">
                                        <span>Reviews</span>
                                        <input type="text" class="form-control" id="review"
                                               name="review" placeholder="Reviews"/>
                                            <input type="hidden" name="sale_id" t-att-value="revs.id" />
                                    </div>
                                    <div class="text-center mt-4">
                                        <button class="btn btn-danger integration">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </t>
        </template>
        <template id="review_return_page_template" name="Registration Success">
            <t t-call="website.layout">
                <div style="padding-left:310px; margin:100px">
                    <div align="center" style="width:500px;">
                        <img src="/pragmatic_laundry_management/static/src/images/success.png" style="width:20%; height:20%;" />
                        <h2 align="center" style="font-size: 20px; font-weight: bold;">Reivew submitted successfully!</h2>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>