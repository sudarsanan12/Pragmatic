<odoo>
    <data>


        


        <record id="employee_inherit" model="ir.ui.view">
            <field name="name">Employee</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">

                <header>
                    <button name="create_users_employee" string="Create User" type="object" class="oe_highlight" attrs="{'invisible': [('user_id','!=',False)]}"/>
                </header>

                <xpath expr="//field[@name='work_email']" position="after">
                    <field name="is_admin" invisible="1"/>
                    <field name="is_driver" invisible="1"/>
                    <field name="is_qc" invisible="1"/>
                    <field name="is_cleaner" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='mobile_phone']" position="attributes">
                    <attribute name="required">True</attribute>
                </xpath>
                <xpath expr="//field[@name='work_phone']" position="attributes">
                    <attribute name="required">True</attribute>
                </xpath> 
                <xpath expr="//field[@name='work_email']" position="attributes">
                    <attribute name="required">True</attribute>
                </xpath>
                <xpath expr="//button[@name='%(hr.plan_wizard_action)d']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//group[@name='identification_group']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>


        <record id="action_admin" model="ir.actions.act_window">
            <field name="name">Admin</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('is_admin', '=', True)]</field>
            <field name="context">{'default_is_admin':True}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Create a new Admin
                </p>
            </field>
        </record>
        <record id="action_driver" model="ir.actions.act_window">
            <field name="name">Driver</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('is_driver', '=', True)]</field>
            <field name="context">{'default_is_driver':True}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Create a new Driver
                </p>
            </field>
        </record>
        <record id="action_qc" model="ir.actions.act_window">
            <field name="name">Qc</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('is_qc', '=', True)]</field>
            <field name="context">{'default_is_qc':True}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Create a new Qc
                </p>
            </field>
        </record>

        <record id="action_cleaner" model="ir.actions.act_window">
            <field name="name">Service person</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('is_cleaner', '=', True)]</field>
            <field name="context">{'default_is_cleaner':True}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Create a new Service person
                </p>
            </field>
        </record>
  
    

    </data>
</odoo>