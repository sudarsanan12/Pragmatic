<odoo>
    <data>



        <record id="view_cleaner_dashboard_tree" model="ir.ui.view">
            <field name="name">laundry_management.cleaner.tree</field>
            <field name="model">laundry_management.cleaner</field>
            <field name="arch" type="xml">
                <tree string="Service">
                    <field name="sequence"/>
                    <field name="sale_id"/>
                    <field name="cleaner_id"/>
                </tree>
            </field>
        </record>

        <record id="view_cleaner_dashboard_form" model="ir.ui.view">
            <field name="name">laundry_management.cleaner.form</field>
            <field name="model">laundry_management.cleaner</field>
            <field name="arch" type="xml">
                <form string="Service">
                  <header>
                    <button name="servicein" string="In Service" type="object" class="btn btn-primary" attrs="{'invisible':  [('state', '!=', 'pending')]}"/>
                    <button name="serviceout" string="Service Completed" type="object" class="btn btn-primary" attrs="{'invisible':  [('state', '!=', 'in_service')]}"/>
                    <field name="state" widget="statusbar" />
                  </header>
                    <sheet>
                      <div class="oe_title">
                        <h1>
                          <field name="sequence" readonly="1" />
                        </h1>
                        </div>
                        <group>
                          <group>
                            <field name="sale_id"/>
                            <field name="cleaner_id"/>
                          </group>
                        </group>
                        
                    </sheet>

                    <div class="oe_chatter">
                      <field name="message_follower_ids"/>
                      <!-- <field name="activity_ids"/> -->
                      <field name="message_ids"/>
                  </div>
                </form>
            </field>
        </record>

        <record id="view_cleaner_dashboard_search" model="ir.ui.view">
            <field name="name">laundry_management.cleaner.search</field>
            <field name="model">laundry_management.cleaner</field>
            <field name="arch" type="xml">
                <search string="Service">
                  <field name="sequence"/>
                  <field name="sale_id"/>
                  <field name="cleaner_id"/>
                </search>
            </field>
        </record>

        <record id="cleaner_dashboard_kanban_view" model="ir.ui.view">
            <field name="name">laundry_management.cleaner.kanban</field>
            <field name="model">laundry_management.cleaner</field>
            <field name="arch" type="xml">
              <kanban class="o_kanban_laundry">
                <field name="sequence"/>
                    <field name="sale_id"/>
                    <field name="cleaner_id"/>
                <templates>
                  <t t-name="kanban-box">
                    <div t-attf-class="oe_kanban_card oe_kanban_global_click" style="width:500px;">
                      <div class="oe_kanban_details">
                        <div class="col-6">
                          <strong class="oe_kanban_record_title">
                            <div class="row">
                              <div class="col-12">
                                <span>ID: <t t-esc="record.sequence.value" />
                                </span>
                              </div>
                            </div>
                            <div class="row">
                              <div class="col-12 text-muted">
                                <span>Order id : <t t-esc="record.sale_id.value" />
                                </span>
                              </div>
                            </div>
                            <div class="row">
                              <div class="col-12 text-muted">
                                <span>Service person: <t t-esc="record.cleaner_id.value" />
                                </span>
                              </div>
                            </div>
                          </strong>
                        </div>
                      </div>
                    </div>
                  </t>
                </templates>
              </kanban>
            </field>
          </record>

        <record id="action_cleaner_dashboard" model="ir.actions.act_window">
            <field name="name">Service person</field>
            <field name="res_model">laundry_management.cleaner</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Service Person
                </p>
            </field>
        </record>



       
    </data>
    </odoo>