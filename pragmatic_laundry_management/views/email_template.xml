<odoo>
    <data noupdate="1">
        <record id="laundry_email_template_delivery" model="mail.template">
            <field name="name">Delivery: Send by email</field>
            <field name="model_id" ref="pragmatic_laundry_management.model_sale_order"/>
            <field name="email_from">{{ object.company_id.email }}</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="email_cc">{{ object.company_id.email }}</field>
            <field name="subject">Delivery Completed for (Ref {{ object.name }})</field>
            <field name="description">Product delivered to customers with order id </field>
            <field name="auto_delete" eval="False" />
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear
                            <t t-esc='object.partner_id.name'></t>
                        <br /><br />
                        Your order 
                            ID <strong><t t-esc='object.name'></t></strong>
                        amounting in <strong><t t-esc='object.amount_total'></t></strong>
                        from <t t-esc='object.company_id.name'></t>.
                        Thankyou for choosing <t t-esc='object.company_id.name'></t> we are delighted to assist you further.
                        <br /><br />
                        Do not hesitate to contact us if you have any questions.
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>
