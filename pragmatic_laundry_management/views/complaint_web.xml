<odoo>
    <data>
        <template id="complaint_page_template">
            <t t-call="website.layout">

                <div class="container mt-5 mb-5">
                    <form role='form' method="POST" action="/laundry/complaint-submit">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div class="row height d-flex justify-content-center align-items-center">
                            <div class="col-md-6">
                                <div class="card px-5 py-4">
                                    <h1 id="order_id_id" name="order_id_id">
                                        <t t-esc="orders.name"/>
                                    </h1>
                                    <t t-esc="orders.partner_id.name"/>
                                    <div class="mt-2 inputs">
                                        <span>Complaints</span>
                                        <input type="text" class="form-control" id="complaint_description" name="complaint_description" placeholder="complaint" required="true"/>
                                        <input type="hidden" name="order_id_id" t-att-value="orders.id" />
                                    </div>
                                    <div class="text-center mt-4">
                                        <button class="btn btn-danger integration">
                                            Submit
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </t>
        </template>
        <template id="complaint_return_page_template" name="Registration Success">
            <t t-call="website.layout">
                <div style="padding-left:310px; margin:100px">
                    <div align="center" style="width:500px;">
                        <img src="/pragmatic_laundry_management/static/src/images/success.png" style="width:20%; height:20%;" />
                        <h2 align="center" style="font-size: 20px; font-weight: bold;">Complaint Registration is successful!</h2>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>