<odoo>
    <data>

        <record id="laundry_management" model="ir.module.category">
            <field name="name">Laundry admistration</field>
            <field name="description">Group for laundry</field>
            <field name="sequence">20</field>
        </record>

        <record id="group_admin" model="res.groups">
            <field name="name">Admin</field>
            <field name="category_id" ref="pragmatic_laundry_management.laundry_management"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')), (4, ref('base.user_admin')),(4, ref('stock.group_stock_manager')),(4, ref('base.group_system')),(4, ref('hr.group_hr_manager')),(4, ref('sales_team.group_sale_manager')),(4, ref('account.group_account_manager'))]"/>
        </record>

        <record id="group_driver" model="res.groups">
            <field name="name">Driver</field>
            <field name="category_id" ref="pragmatic_laundry_management.laundry_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')),(4, ref('stock.group_stock_user'))]"/>
        </record>

        <record id="group_qc" model="res.groups">
            <field name="name">Qc</field>
            <field name="category_id" ref="pragmatic_laundry_management.laundry_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')),(4, ref('stock.group_stock_user'))]"/>
        </record>

        <record id="group_cleaner" model="res.groups">
            <field name="name">Service person</field>
            <field name="category_id" ref="pragmatic_laundry_management.laundry_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')),(4, ref('stock.group_stock_user')),(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
        </record>

        <record id="qc_group_rule" model="ir.rule">
            <field name="name">qc rule</field>
            <field name="model_id" ref="model_laundry_management_qc"/>
            <field name="domain_force">[('sale_id.qc_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_qc'))]"/>
        </record>
        <record id="cleaner_group_rule" model="ir.rule">
            <field name="name">Service person rule</field>
            <field name="model_id" ref="model_laundry_management_cleaner"/>
            <field name="domain_force">[('sale_id.cleaner_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_cleaner'))]"/>
        </record>

    </data>
</odoo>